<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">

    <TextView
        android:id="@+id/noMatchesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:text="No Existing Records Found."/>

    <LinearLayout
        android:id="@+id/noMatchesButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/noMatchesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/newPatientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="New Patient"
            android:fontFamily="droid"
            android:textColor="@drawable/text_button"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="@android:color/transparent"/>


        <Button
            android:id="@+id/searchAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Search Again"
            android:fontFamily="droid"
            android:textColor="@drawable/text_button"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout>
